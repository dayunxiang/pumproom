@using Microsoft.AspNetCore.Mvc.Rendering
@model JuCheap.Core.Models.StationDto
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout_Content.cshtml";
}
<div class="wrapper wrapper-content">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>编辑站点信息</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            @using (Html.BeginForm("Edit", "Station", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            <label class="col-sm-3 control-label">@Html.LabelFor(m => m.分区名称)：</label>
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.分区名称, new { @class = "form-control", placeholder = "分区名称" })
                @Html.ValidationMessageFor(m => m.分区名称)
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">@Html.LabelFor(m => m.分区类型)：</label>
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.分区类型, new { @class = "form-control", placeholder = "分区类型" })
                @Html.ValidationMessageFor(m => m.分区类型)
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">@Html.LabelFor(m => m.站点名称)：</label>
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.站点名称, new { @class = "form-control", placeholder = "站点名称" })
                @Html.ValidationMessageFor(m => m.站点名称)
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">@Html.LabelFor(m => m.站点编号)：</label>
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.站点编号, new { @class = "form-control", placeholder = "站点编号" })
                @Html.ValidationMessageFor(m => m.站点编号)
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">@Html.LabelFor(m => m.编号)：</label>
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.编号, new { @class = "form-control", placeholder = "编号" })
                @Html.ValidationMessageFor(m => m.编号)
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">@Html.LabelFor(m => m.站点全名)：</label>
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.站点全名, new { @class = "form-control", placeholder = "站点全名" })
                @Html.ValidationMessageFor(m => m.站点全名)
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">@Html.LabelFor(m => m.站点类型)：</label>
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.站点类型, new { @class = "form-control", placeholder = "站点类型" })
                @Html.ValidationMessageFor(m => m.站点类型)
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">@Html.LabelFor(m => m.分区内排序)：</label>
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.分区内排序, new { @class = "form-control", placeholder = "分区内排序" })
                @Html.ValidationMessageFor(m => m.分区内排序)
            </div>
        </div>

        @*<div class="form-group">
        <label class="col-sm-3 control-label">@Html.LabelFor(m => m.Description)：</label>
        <div class="col-sm-8">
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "角色描述", rows = "3" })
            @Html.ValidationMessageFor(m => m.Description)
        </div>
    </div>*@
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-8">
                <button class="btn btn-info" type="submit">保存</button>
                <button class="btn btn-white" type="button" id="btnBack">返回</button>
            </div>
        </div>
}
        </div>
    </div>
</div>
@section scripts{
    <environment names="Development">
        <script src="~/js/jquery.validate.js"></script>
        <script src="~/js/jquery.validate.unobtrusive.js"></script>
        <script src="~/js/base.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/validate.min.js" asp-append-version="true"></script>
        <script src="~/js/base.min.js" asp-append-version="true"></script>
    </environment>
    <script>
        $("#btnBack").bind("click", function(e) {
            XPage.GoTo(e.target, "@Url.Action("Index")");
        });
    </script>
}

